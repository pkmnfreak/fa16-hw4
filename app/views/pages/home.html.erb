<h1> hallo </h1>

<%= link_to "Make a new user", users_new_path %>

<%= link_to "Make a new Todo", todo_new_path %>

<%= link_to "Make a new Cat", cats_new_path %>

<table>
  <tr>
    <h1><td>username</td></h1>
    <td>email</td>
    <td>age</td>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.username%></td>
    <td><%= user.email%></td>
    <td><%= user.age%></td>
  </tr>
  <% end %>
</table>

<table>
  <tr>
    <h1><td>tasks</td></h1>
    <td>finished?</td>
  </tr>
  <% @todo.each do |todo| %>
  <tr>
    <td><%= todo.tasks%></td>
    <td><%= todo.finished%></td>
  </tr>
  <% end %>
</table>

<table>
  <tr>
    <h1><td>Names</td></h1>
  </tr>
  <% @cats.each do |cat| %>
  <tr>
    <td><%= cat.name%></td>
  </tr>
  <% end %>
</table>
